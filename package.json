{
  "name": "electron-api-demos",
  "productName": "Electron API Demos",
  "version": "2.0.1",
  "description": "Electron interactive API demos",
  "main": "main.js",
  "bin": "cli.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "pretest": "rimraf allure-results && rimraf built",
    "prettier": "./node_modules/.bin/prettier --write ./test/**/*.ts",
    "test": "tsc && mocha -R mocha-multi --reporter-options mocha-allure-reporter=-,spec=- --compilers js:babel-register --full-trace ./built/**/*.spec.js && standard",
    "posttest": "allure generate allure-results --clean -o allure-report",
    "package": "npm-run-all package:*",
    "package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --out=out --icon=assets/app-icon/mac/app.icns --osx-sign.identity='Developer ID Application: GitHub' --extend-info=assets/mac/info.plist",
    "package:win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --out=out --icon=assets/app-icon/win/app.ico",
    "package:linux": "electron-packager . --overwrite --platform=linux --arch=x64 --out=out",
    "package:sign-exe": "signcode './out/Electron API Demos-win32-ia32/Electron API Demos.exe' --cert ~/electron-api-demos.p12 --prompt --name 'Electron API Demos' --url 'http://electron.atom.io'",
    "package:installer": "node ./script/installer.js",
    "package:sign-installer": "signcode './out/windows-installer/ElectronAPIDemosSetup.exe' --cert ~/electron-api-demos.p12 --prompt --name 'Electron API Demos' --url 'http://electron.atom.io'",
    "xpackage:mas": "./script/mas.sh",
    "windows-store": "node ./script/windows-store.js",
    "release": "node ./script/release.js",
    "prepack": "check-for-leaks",
    "prepush": "check-for-leaks",
    "report": "allure generate allure-results --clean -o allure-report && allure open allure-report"
  },
  "repository": "https://github.com/electron/electron-api-demos",
  "keywords": [
    "Electron",
    "API",
    "demo"
  ],
  "author": "GitHub",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/electron": "^1.6.10",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/webdriverio": "^4.13.2",
    "allure-commandline": "^2.8.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "chai": "^3.4.1",
    "chai-as-promised": "^6.0.0",
    "check-for-leaks": "^1.2.0",
    "devtron": "^1.3.0",
    "electron-packager": "^12.1.0",
    "electron-winstaller": "^2.2.0",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "mocha-allure-reporter": "^1.4.0",
    "mocha-multi": "^1.0.1",
    "mochawesome": "^3.1.1",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.15.3",
    "request": "^2.70.0",
    "rimraf": "^2.6.2",
    "signcode": "^0.5.0",
    "spectron": "^5.0.0",
    "standard": "^8.2.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "3.7.0",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2",
    "webpack": "^4.27.1"
  },
  "dependencies": {
    "electron": "^3.0.3",
    "electron-log": "^2.2.14",
    "electron-settings": "^3.0.7",
    "electron-shortcut-normalizer": "^1.0.0",
    "glob": "^7.1.0",
    "highlight.js": "^9.3.0",
    "update-electron-app": "^1.1.1"
  },
  "standard": {
    "env": {
      "mocha": true
    },
    "ignore": [
      "./test/**/*"
    ]
  }
}
